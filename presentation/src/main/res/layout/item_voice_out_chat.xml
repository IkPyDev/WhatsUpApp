<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginVertical="8dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <me.jagar.chatvoiceplayerlibrary.VoicePlayerView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="20dp"
        android:id="@+id/voicePlayerView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:enableVisualizer="false"
        app:visualizationPlayedColor="#18729A"
        app:visualizationNotPlayedColor="#727171"
        app:playPauseBackgroundColor="@color/gray"
        app:timingBackgroundColor="@color/gray"
        app:seekBarProgressColor="#000"
        app:showShareButton="false"
        app:playPauseCornerRadius="100"
        app:showTiming="true"
        app:viewCornerRadius="100"
        app:viewBackground="@color/blue"
        app:progressTimeColor="#000"
        app:seekBarThumbColor="@color/white"
        app:playProgressbarColor="#9EACB8"/>



</androidx.constraintlayout.widget.ConstraintLayout>